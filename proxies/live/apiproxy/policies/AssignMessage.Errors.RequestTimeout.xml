<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage name="AssignMessage.Errors.RequestTimeout">
    <Set>
        <StatusCode>408</StatusCode>
    </Set>
    <AssignVariable>
        <Name>pds.error.code</Name>
        <Value>timeout</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>pds.error.coding.code</Name>
        <Value>UNABLE_TO_CALL_SERVICE</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>pds.error.coding.display</Name>
        <Value>Unable to call Service</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>pds.error.diagnostics</Name>
        <Value>For a synchronous request, the downstream domain processing has not completed within the configured timeout period. Please retry using the same 'X-Request-ID'.</Value>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</AssignMessage>