<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.RequestTimeout">
  <FaultResponse>
    <Set>
      <Headers />
      <Payload contentType="text/plain" />
      <StatusCode>504</StatusCode>
      <ReasonPhrase>Request Timeout</ReasonPhrase>
    </Set>
    <AssignVariable>
        <Name>pds.error.code</Name>
        <Value>value</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>pds.error.coding.code</Name>
        <Value>REQUEST_TIMEOUT</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>pds.error.coding.display</Name>
        <Value>The request has timed out</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>pds.error.diagnostics</Name>
        <Template>The request has not been processed within the timeout period, please retry the request with the same "X-Request-ID".</Template>
    </AssignVariable>
  </FaultResponse>
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>
